<% include ./partials/header %>
<script type="text/javascript" src="/assets/register.js"></script>
<div class="ui container segment">
  <form class="ui form" action="/register" method="POST">
    <h1 class="ui dividing header">Sign Up</h1>
    <div class="field">
      <div class="field">
        <label>Username</label>
        <input type="text" id='username' name="account[username]" placeholder="kimLoveDogs">
      </div>
      <div class="two fields">
        <div class="twelve wide field">
          <label>E-mail</label>
          <input type="text" name="account[email]" placeholder="iReallyDo@gmail.com">
        </div>
        <div class="field">
          <label>Age</label>
          <input type="text" name="account[age]" placholder="18" >
        </div>
        <div class="field">
          <label>Gender</label>
          <select class="ui dropdown" name="account[gender]">
            <option value="">Select</option>
            <option value="male">Male</option>
            <option value="female">Female</option>
          </select>
        </div>
      </div>
      <div class="field">
        <label>Password</label>
        <input type="password" name="account[password]">
      </div>
    </div>
    <button class="ui submit button">Register</button>
    <a href="/login">Already have an account?</a>
    <div class="ui error message"></div>
  </form>
</div>
<% include ./partials/footer %>
